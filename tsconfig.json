{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
    }
}
